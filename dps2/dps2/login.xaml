<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dps2.Page1" Title="Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="CPF" />
            <Entry x:Name="cpfUsuario" Placeholder="CPF" Style="000.000.000-00"  />
            <Label Text="Senha" />
            <Entry x:Name="senhaUsuario" IsPassword="true" />
            <Button Text="Login"/>
            <Button Text="Esqueceu sua senha?"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>