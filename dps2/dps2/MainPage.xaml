<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dps2"
             x:Class="dps2.MainPage">

    <ContentPage.Content>

        <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand">

            <!--Abaixo disponível apenas aos clientes-->
                <Button Text="EMERGÊNCIA" BackgroundColor="Red" TextColor="Black" ClassId="clientes"></Button>

                <Button Text="Mapa" TextColor="Blue" ClassId="clientes"></Button>

                <Button Text="Registrar Ocorrência" TextColor="Blue" ClassId="clientes"></Button>

                <Button Text="Atualizar Dados" TextColor="Blue" ClassId="clientes"></Button>

                <!--Abaixo disponível apenas aos funcionários-->
            <Button Text="Iniciar Ronda" BackgroundColor="Blue" TextColor="Black" ClassId="funcionarios"></Button>

                <Button Text="Visualizar Emergências" TextColor="Black" ClassId="funcionarios"></Button>

                <Button Text="Visualizar Ocorrência" TextColor="Blue" ClassId="funcionarios"></Button>
                       
                                               
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>