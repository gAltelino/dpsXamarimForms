<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dps2.layouts.acionamentoEspecial">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Picker Title="Selecione a Ocorrência">
                <Picker.Items>
                    <x:String>Arrombamento</x:String>
                    <x:String>Meliante</x:String>
                    <x:String>Motim</x:String>
                    <x:String>Drogado</x:String>
                    <x:String>Outro</x:String>
                </Picker.Items>
            </Picker>

            <TextCell x:Name="Descreva a ocorrência">
            </TextCell>

            <Button x:Name="Enviar"></Button>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>