<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dps2.esqueceuSenha">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="6, 10, 6, 6">
            <Label Text="Preencha seu e-mail no campo abaixo:" />
            <Entry x:Name="dadoRecuperacao" Placeholder="E-Mail"></Entry>
            <Button Text="Confirmar" TextColor="Black" BackgroundColor="LightBlue"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>