<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dps2"
             x:Class="dps2.MainPage">

    <ContentPage.Content>

        <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand" Margin="6, 10, 6, 6">

            <!--Abaixo disponível apenas aos clientes-->
                <Button Text="PÂNICO" BackgroundColor="Red" TextColor="Black" ClassId="clientes" IsVisible="False"></Button>

                <Button Text="Rondas em Andamento" TextColor="Blue" ClassId="clientes" IsVisible="False"></Button>

                <Button Text="Ocorrência" TextColor="Blue" ClassId="clientes" IsVisible="False"></Button>

                <Button Text="Consultar Ocorrências" TextColor="Blue" ClassId="clientes" IsVisible="False"></Button>

                <!--Abaixo disponível apenas aos funcionários-->

                <Button Text="Visualizar Ronda" BackgroundColor="LightGreen" TextColor="Black" ClassId="funcionarios" Clicked="Button_Clicked"></Button>

                <Button Text="Visualizar Pânicos" TextColor="Black" ClassId="funcionarios"></Button>

                <Button Text="Visualizar Ocorrências" TextColor="Black" ClassId="funcionarios"></Button>

                <Button Text="Consultar Ocorrências" TextColor="Black" ClassId="funcionarios"></Button>

                <Button Text="Sair" TextColor="Blue" ClassId="funcionarios"></Button>
                                               
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>